#include <iostream>
using namespace std;
main()
 
{
    float celsius, fahrenheit;
    
    cout<<"Enter the temperature in Fahrenheit : ";
    cin>> fahrenheit;
    celsius= (fahrenheit - 32)*5.0/9.0;
    cout<<"The temperature in Fahrenheit : "<<celsius<<endl;

    return 0;
}
